{
  "name": "@uzh-bf/design-system",
  "version": "2.5.2",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/uzh-bf/design-system.git"
  },
  "maintainers": [
    "Roland Schlaefli <roland.schlaefli@bf.uzh.ch>",
    "Julius Schlapbach <julius.schlapbach@bf.uzh.ch>",
    "Florina Vogel <florina.vogel@bf.uzh.ch>"
  ],
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "npm-run-all build:dts build:copy",
    "build:dts": "dts build --entry src/index.ts --entry src/constants.js",
    "build:copy": "node src/copy.js",
    "lint": "dts lint",
    "size": "size-limit",
    "dev": "ladle serve",
    "deploy": "ladle build",
    "preview": "ladle build && ladle preview -p 61000",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "dts test --passWithNoTests",
    "prerelease": "npm run build",
    "release": "standard-version",
    "release:dry": "standard-version --dry-run",
    "prepare": "husky install",
    "check": "tsc --noEmit"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "engines": {
    "node": ">=16"
  },
  "size-limit": [
    {
      "path": "dist/index.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@ladle/react": "2.15.0",
    "@size-limit/preset-small-lib": "7.0.8",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/forms": "0.5.3",
    "@tailwindcss/typography": "0.5.9",
    "@tsconfig/create-react-app": "1.0.3",
    "@tsconfig/recommended": "1.0.1",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react-swc": "3.3.2",
    "dts-cli": "1.6.3",
    "eslint": "8.44.0",
    "husky": "8.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.1",
    "prettier-plugin-organize-imports": "3.2.2",
    "prettier-plugin-tailwindcss": "0.3.0",
    "rollup-plugin-postcss": "4.0.2",
    "size-limit": "7.0.8",
    "standard-version": "9.5.0",
    "ts-jest": "29.0.5",
    "tslib": "2.6.0",
    "typescript": "5.1.6"
  },
  "volta": {
    "node": "18.15.0"
  },
  "peerDependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.3.0",
    "@fortawesome/free-regular-svg-icons": "^6.3.0",
    "@fortawesome/free-solid-svg-icons": "^6.3.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "autoprefixer": "^10.0.0",
    "dayjs": "^1.0.0",
    "formik": "^2.2.9",
    "postcss-import": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.8.1",
    "tailwindcss": "^3.3.0",
    "tailwindcss-radix": "^2.8.0",
    "yup": "^1.0.0"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "1.0.4",
    "@radix-ui/react-collapsible": "1.0.3",
    "@radix-ui/react-dialog": "1.0.4",
    "@radix-ui/react-dropdown-menu": "2.0.5",
    "@radix-ui/react-label": "2.0.2",
    "@radix-ui/react-navigation-menu": "1.1.3",
    "@radix-ui/react-progress": "1.0.3",
    "@radix-ui/react-select": "1.2.2",
    "@radix-ui/react-slider": "1.1.2",
    "@radix-ui/react-switch": "1.0.3",
    "@radix-ui/react-tabs": "1.0.4",
    "@radix-ui/react-toast": "1.1.4",
    "@radix-ui/react-tooltip": "1.0.6",
    "react-colorful": "5.6.1",
    "react-countdown": "2.3.5"
  }
}
