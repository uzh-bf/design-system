{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "include-component-in-tag": false,
  "separate-pull-requests": false,
  "always-update": true,
  "release-search-depth": 400,
  "commit-search-depth": 500,
  "sequential-calls": false,
  "changelog-sections": [
    { "type": "feat", "section": "Features" },
    { "type": "fix", "section": "Bug Fixes" },
    { "type": "docs", "section": "Documentation" },
    { "type": "style", "section": "Styles" },
    { "type": "refactor", "section": "Code Refactoring" },
    { "type": "test", "section": "Tests" },
    { "type": "chore", "section": "Other" },
    { "type": "build", "section": "Build System" },
    { "type": "ci", "section": "Continuous Integration" },
    { "type": "enhance", "section": "Enhancements" }
  ],
  "plugins": [
    {
      "type": "node-workspace",
      "updatePeerDependencies": true
    }
  ],
  "packages": {
    ".": {
      "release-type": "node",
      "component": "monorepo",
      "extra-files": [
        "package.json",
        "packages/design-system/package.json",
        "packages/header-custom-element/package.json",
        "packages/header-react/package.json",
        "packages/parcel-config-design-system/package.json",
        "packages/parcel-resolver-preact/package.json",
        "packages/tag-custom-element/package.json",
        "packages/tag-react/package.json",
        "packages/tailwind-config-design-system/package.json"
      ]
    }
  }
}
