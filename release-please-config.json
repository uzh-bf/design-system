{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "separate-pull-requests": false,
  "always-update": true,
  "release-search-depth": 400,
  "commit-search-depth": 500,
  "sequential-calls": false,
  "changelog-sections": [
    { "type": "feat", "section": "Features", "hidden": false },
    { "type": "fix", "section": "Bug Fixes", "hidden": false },
    { "type": "docs", "section": "Documentation", "hidden": false },
    { "type": "style", "section": "Styles", "hidden": false },
    { "type": "refactor", "section": "Code Refactoring", "hidden": false },
    { "type": "test", "section": "Tests", "hidden": false },
    { "type": "chore", "section": "Other", "hidden": false },
    { "type": "build", "section": "Build System", "hidden": false },
    { "type": "ci", "section": "Continuous Integration", "hidden": false },
    { "type": "enhance", "section": "Enhancements", "hidden": false }
  ],
  "plugins": [
    {
      "type": "node-workspace",
      "updatePeerDependencies": true
    }
  ],
  "packages": {
    ".": {
      "release-type": "node",
      "component": "monorepo"
    },
    "packages/design-system": {
      "release-type": "node",
      "path": "packages/design-system"
    },
    "packages/header-custom-element": {
      "release-type": "node",
      "path": "packages/header-custom-element"
    },
    "packages/header-react": {
      "release-type": "node",
      "path": "packages/header-react"
    },
    "packages/parcel-config-design-system": {
      "release-type": "node",
      "path": "packages/parcel-config-design-system"
    },
    "packages/parcel-resolver-preact": {
      "release-type": "node",
      "path": "packages/parcel-resolver-preact"
    },
    "packages/tag-custom-element": {
      "release-type": "node",
      "path": "packages/tag-custom-element"
    },
    "packages/tag-react": {
      "release-type": "node",
      "path": "packages/tag-react"
    },
    "packages/tailwind-config-design-system": {
      "release-type": "node",
      "path": "packages/tailwind-config-design-system"
    }
  }
}
